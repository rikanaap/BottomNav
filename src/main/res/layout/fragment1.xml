<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Rekomedasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:paddingLeft="30px"
            android:text="REKOMENDASI"
            android:textColor="@color/redy"
            android:textSize="60px"
            app:layout_constraintBottom_toTopOf="@+id/backy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.384" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1400px"
        android:paddingTop="80px">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/backy"
                android:layout_width="500px"
                android:layout_height="630px"
                android:background="@drawable/menu_button"
                app:layout_constraintBottom_toTopOf="@+id/backy2"
                app:layout_constraintEnd_toStartOf="@+id/backy1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Rekomedasi">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="460px"
                    android:layout_height="400px"
                    android:src="@drawable/burger"
                    app:layout_constraintBottom_toBottomOf="@+id/backy"
                    app:layout_constraintEnd_toEndOf="@+id/backy"
                    app:layout_constraintHorizontal_bias="0.533"
                    app:layout_constraintStart_toStartOf="@+id/backy"
                    app:layout_constraintTop_toTopOf="@+id/backy"
                    app:layout_constraintVertical_bias="0.011" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="Cheese Burger"
                    android:textColor="#EA9F9F"
                    android:textSize="70px"
                    app:layout_constraintEnd_toEndOf="@+id/backy"
                    app:layout_constraintStart_toStartOf="@+id/backy"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/regular"
                    android:text="Rp13.000"
                    android:textColor="@color/whit"
                    android:textSize="50px"
                    app:layout_constraintBottom_toBottomOf="@+id/backy"
                    app:layout_constraintEnd_toEndOf="@+id/backy"
                    app:layout_constraintStart_toStartOf="@+id/backy" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/backy1"
                android:layout_width="500px"
                android:layout_height="630px"
                android:background="@drawable/menu_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.157"
                app:layout_constraintStart_toEndOf="@+id/backy"
                app:layout_constraintTop_toBottomOf="@+id/Rekomedasi">

                <ImageView
                    android:id="@+id/double_chese"
                    android:layout_width="460px"
                    android:layout_height="400px"
                    android:src="@drawable/double_cheese"
                    app:layout_constraintBottom_toBottomOf="@+id/backy1"
                    app:layout_constraintEnd_toEndOf="@+id/backy1"
                    app:layout_constraintHorizontal_bias="0.533"
                    app:layout_constraintStart_toStartOf="@+id/backy1"
                    app:layout_constraintTop_toTopOf="@+id/backy1"
                    app:layout_constraintVertical_bias="0.011" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="Double Cheese"
                    android:textColor="#EA9F9F"
                    android:textSize="70px"
                    app:layout_constraintBottom_toTopOf="@+id/KataDouble"
                    app:layout_constraintEnd_toEndOf="@+id/backy1"
                    app:layout_constraintStart_toStartOf="@+id/backy1"
                    app:layout_constraintTop_toBottomOf="@+id/double_chese" />

                <TextView
                    android:id="@+id/KataDouble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/regular"
                    android:text="Rp15.000"
                    android:textColor="@color/whit"
                    android:textSize="50px"
                    app:layout_constraintBottom_toBottomOf="@+id/backy1"
                    app:layout_constraintEnd_toEndOf="@+id/backy1"
                    app:layout_constraintStart_toStartOf="@+id/backy1"
                    app:layout_constraintTop_toBottomOf="@+id/double_chese"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/backy2"
                android:layout_width="500px"
                android:layout_height="630px"
                android:layout_marginTop="8dp"
                android:background="@drawable/menu_button"
                app:layout_constraintHorizontal_bias="0.054"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/backy3"
                app:layout_constraintTop_toBottomOf="@+id/backy"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/Chicken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="Chicken Fillet"
                    android:textColor="#EA9F9F"
                    android:textSize="70px"
                    app:layout_constraintBottom_toTopOf="@+id/KataFillet"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.518"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/double_fillet" />

                <ImageView
                    android:id="@+id/double_fillet"
                    android:layout_width="460px"
                    android:layout_height="400px"
                    android:src="@drawable/double_fillet"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/KataFillet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/regular"
                    android:text="Rp14.000"
                    android:textColor="@color/whit"
                    android:textSize="50px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Chicken" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/backy3"
                android:layout_width="500px"
                android:layout_height="630px"
                android:layout_marginTop="8dp"
                android:background="@drawable/menu_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.932"
                app:layout_constraintStart_toEndOf="@+id/backy2"
                app:layout_constraintTop_toBottomOf="@+id/backy1"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/Extra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="Extra Big"
                    android:textColor="#EA9F9F"
                    android:textSize="70px"
                    app:layout_constraintBottom_toTopOf="@+id/KataExtra"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.518"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/double_fillet" />

                <ImageView
                    android:id="@+id/double_fillet"
                    android:layout_width="460px"
                    android:layout_height="400px"
                    android:src="@drawable/extra_big"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/KataExtra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/regular"
                    android:text="Rp17.000"
                    android:textColor="@color/whit"
                    android:textSize="50px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Extra" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/backy4"
                android:layout_width="500px"
                android:layout_height="630px"
                android:layout_marginTop="8dp"
                android:background="@drawable/menu_button"
                app:layout_constraintHorizontal_bias="0.054"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/backy5"
                app:layout_constraintTop_toBottomOf="@+id/backy2"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/Dog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="Hot Dog"
                    android:textColor="#EA9F9F"
                    android:textSize="70px"
                    app:layout_constraintBottom_toTopOf="@+id/KataHot"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.518"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hotdog" />

                <ImageView
                    android:id="@+id/hotdog"
                    android:layout_width="460px"
                    android:layout_height="400px"
                    android:src="@drawable/hotdog"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/KataHot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/regular"
                    android:text="Rp8.000"
                    android:textColor="@color/whit"
                    android:textSize="50px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Dog" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/backy5"
                android:layout_width="500px"
                android:layout_height="630px"
                android:layout_marginTop="8dp"
                android:background="@drawable/menu_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.932"
                app:layout_constraintStart_toEndOf="@+id/backy4"
                app:layout_constraintTop_toBottomOf="@+id/backy3"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/French"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="French Fries"
                    android:textColor="#EA9F9F"
                    android:textSize="70px"
                    app:layout_constraintBottom_toTopOf="@+id/KataFries"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.518"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/french_fries" />

                <ImageView
                    android:id="@+id/french_fries"
                    android:layout_width="460px"
                    android:layout_height="400px"
                    android:src="@drawable/frenchfries"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/KataFries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/regular"
                    android:text="Rp6.000"
                    android:textColor="@color/whit"
                    android:textSize="50px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/French" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>